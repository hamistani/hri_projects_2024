<launch>
    <!-- Use our custom node to control the head's movement -->
    <node pkg="week4" type="tf_look_at_hand2.py" name="tf2_look_at_hand2" output="screen">
        <remap from="/joint_states" to="/joint_states_input"/>
    </node>

    <!-- Static transform publisher to broadcast /tf from /base_footprint to /look_at_hand -->
    <node pkg="tf" type="static_transform_publisher" name="base_footprint" args="0 0 0 0 0 0 /base_footprint /look_at_hand" />

    <!-- robot_state_publisher that subscribes to /updated_joint_states -->
    <node pkg="robot_state_publisher" type="robot_state_publisher" name="robot_state_publisher" output="screen">
        <remap from="/joint_states" to="/updated_joint_states"/>
    </node>
</launch>
